{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }]
  },
  "plugins": ["jest"]
}
